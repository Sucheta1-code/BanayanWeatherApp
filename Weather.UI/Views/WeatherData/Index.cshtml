@model IEnumerable<Weather.UI.Models.DTO.WeatherDataDto>

@{
}

<h1 class="mt-3">WeatherData</h1>
<div class="d-flex justify-content-end">
    <a class="btn btn-secondary" asp-controller="WeatherData" asp-action="Add">Add WeatherData</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>CityName</th>
            <th>Temperature</th>
            <th>WeatherCondition</th>
            <th>LastUpdated</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var wetherData in Model)
        {
            <tr>
                <td>@wetherData.Id</td>
                <td>@wetherData.CityName</td>
                <td>@wetherData.Temperature</td>
                <td>@wetherData.WeatherCondition</td>
                <td>@wetherData.LastUpdated</td>   
                <td>
                       <a asp-controller="WeatherData" asp-action="Edit" asp-route-id="@wetherData.Id"
                       class="btn btn-light">Edit</a>
                </td>
           </tr>
        }
    </tbody>
</table>